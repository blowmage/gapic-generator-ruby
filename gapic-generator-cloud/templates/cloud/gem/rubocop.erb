<%- assert_locals gem -%>
inherit_gem:
  google-style: google-style.yml

AllCops:
  Exclude:
    - "acceptance/**/*"
    - "<%= gem.name %>.gemspec"
    - "lib/**/*_pb.rb"
    - "proto_docs/**/*"
    - "Rakefile"
    - "support/**/*"
    - "test/**/*"

Metrics/ClassLength:
  Exclude:
  <%- gem.packages.each do |package| -%>
  <%- package.services.each do |service| -%>
    - "lib/<%= service.client_file_path %>"
  <%- end -%>
  <%- end -%>
Metrics/LineLength:
  Exclude:
  <%- gem.packages.each do |package| -%>
  <%- package.services.each do |service| -%>
    - "lib/<%= service.client_file_path %>"
  <%- end -%>
  <%- end -%>
Naming/FileName:
  Exclude:
    - "lib/<%= gem.name %>.rb"
Style/CaseEquality:
  Enabled: false
